
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Update</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

</head>
<body>
    <div>
        @{ 
            foreach(System.Data.DataRow row in ViewBag.custRecord.Rows)
            {
        <form method="post">
            <h2 class="text-center text-primary">Customer Form</h2>
            <hr>
            <div class="form-inline">
                <label for="firstName">First Name:*</label>
                <input id="firstName" name="FirstName" value="@row["FirstName"]" type="text" class="form-control" placeholder="First Name">
            </div>
            <div class="form-inline">
                <label for="lastName">Last Name:* </label>
                <input value="@row["LastName"]" id="lastName" name="LastName" type="text" class="form-control" placeholder="Last Name">
            </div>
            <div class="form-inline">
                <label for="email">Email:* </label>
                <input id="email" name="Email" value="@row["Email"]" type="text" class="form-control" placeholder="Email">
            </div>
            <div class="form-inline">
                <label for="moble">Mobile Number:* </label>
                <input id="mobile" name="MobileNumber" value="@row["MobileNumber"]" type="text" class="form-control" placeholder="Mobile Number">
            </div>
            <div class="form-inline">
                <label for="gender">Gender:* </label>
                <label class="radio-inline">
                    <input class="mr-3" type="radio" value="Male" name="Gender">Male
                </label>
                <label class="radio-inline ml-3">
                    <input class="mr-3" type="radio" value="Female" name="Gender">Female
                </label>
            </div>
            <div class="form-inline">
                <label for="dob">Date Of Birth: </label>
                <input id="dob" name="DOB" value="@row["DOB"]" type="text" class="form-control" }">
            </div>
            <div class="form-inline">
                <label for="address">Address: </label>
                <input id="address" name="Address" value="@row["Address"]" type="text" class="form-control" placeholder="Address">
            </div>

            <div class="checkbox">
                <label><input type="checkbox" name="IsActive" value="true">Is Active</label>
            </div>
            <div>
                <input type="hidden" name="CountryId" value="1" />
                <input type="submit" class="btn btn-primary" value="Save">
            </div>
        </form>
            }
        }
        
    </div>
   
</body>
</html>
